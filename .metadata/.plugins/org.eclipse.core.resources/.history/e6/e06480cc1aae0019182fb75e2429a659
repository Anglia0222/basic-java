package com.li.basicJava.myThreadLearning.day2;

/**
 * 从银行取钱的模型,无法模拟出来....
 * @author 有之君
 *
 */
public class Bank {

	public String account;
	public int balance;
	public Bank(String account, int balance) {
		super();
		this.account = account;
		this.balance = balance;
	}
	public String getAccount() {
		return account;
	}
	public void setAccount(String account) {
		this.account = account;
	}
	public int getBalance() {
		return balance;
	}
	public void setBalance(int balance) {
		this.balance = balance;
	}
	
	public static void main(String[] args) {
		Bank accout = new Bank("lpz", 1000);
		new DrawMoney("甲", 500, accout).start();
		new DrawMoney("乙", 500, accout).start();
		
		
	}

}
class DrawMoney extends Thread{
	public String name;
	public int money;
	public Bank bank;
	public DrawMoney(String name, int money, Bank bank) {
		super();
		this.name = name;
		this.money = money;
		this.bank = bank;
	}
	@Override
	public void run() {
		
		String account = bank.getAccount();
		int balance = bank.getBalance();
		int yue = balance - this.money;
		
		if(yue > 0){
			try {
				System.out.println(account+"取出了"+this.money);
				Thread.sleep(10000);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			bank.setBalance(yue);
			System.out.println("余额为："+bank.getBalance());
		}else{
			System.out.println("不能取钱");
		}
		
	}
	
}
